@model List<Entidades.Solicitud>
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "Mis Solicitudes";
}

@* Referencias CSS *@
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<link href="~/Content/css/MisSolicitudes.css" rel="stylesheet" />



<div class="container-custom">
    <h1 class="titulo-principal">Mis Solicitudes</h1>

    @if (ViewBag.Error != null)
    {
        <div class="error-message">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }

    <!-- Filtros -->
    <div class="filtros-container">
        <div class="filtros-row">
            <div class="filtro-grupo">
                <label class="filtro-label">Fecha Inicio:</label>
                <input type="date" id="fechaInicio" class="filtro-input" value="@ViewBag.FechaInicio" />
            </div>

            <div class="filtro-grupo">
                <label class="filtro-label">Fecha Fin:</label>
                <input type="date" id="fechaFin" class="filtro-input" value="@ViewBag.FechaFin" />
            </div>

            <div class="filtro-grupo">
                <label class="filtro-label">Estado:</label>
                @Html.DropDownList("estado", (SelectList)ViewBag.EstadosSolicitud, "Todos los estados", new { @class = "filtro-input", @id = "estado" })
            </div>

            <div class="filtro-grupo" style="margin-top: 20px;">
                <button type="button" class="btn-filtrar" onclick="aplicarFiltros()">
                    <i class="fas fa-search"></i>
                    <span>Buscar</span>
                </button>
            </div>

            <div class="filtro-grupo" style="margin-top: 20px;">
                <button type="button" class="btn-limpiar" onclick="limpiarFiltros()">
                    <i class="fas fa-eraser"></i>
                    <span>Limpiar</span>
                </button>
            </div>
        </div>

        <!-- Filtros activos -->
        @if (ViewBag.FiltrosActivos != null)
        {
            <div class="filtros-activos">
                <div class="filtros-activos-titulo">
                    <i class="fas fa-filter"></i> Filtros aplicados:
                </div>
                <div class="filtros-activos-texto">@ViewBag.FiltrosActivos</div>
            </div>
        }
    </div>

    <!-- Loading -->
    <div id="loading" class="loading">
        <i class="fas fa-spinner"></i>
        <p>Cargando solicitudes...</p>
    </div>

    <!-- Resultados -->
    <div id="resultados-container">
        @if (Model != null && Model.Count > 0)
        {
            <div class="solicitudes-container">
                @foreach (var s in Model)
                {
                    <div class="solicitud-card">
                        <!-- Fila 1: Icono + Título -->
                        <div style="display: flex; align-items: center; justify-content: space-between;">
                            <div style="display: flex; align-items: center;">
                                <i class="fas fa-file-alt solicitud-icon"></i>
                                <div class="solicitud-info">
                                    <div class="solicitud-title">@s.Cabecera</div>
                                </div>
                            </div>
                            <!-- Fecha como columna alineada a la derecha -->
                            <div class="solicitud-fecha-col">
                                <div class="solicitud-fecha">@s.FechaSolicitud.ToShortDateString()</div>
                            </div>
                        </div>
                        <!-- Fila 2: Estado -->
                        <div class="solicitud-estado-row">
                            <strong>Estado:</strong> @s.EstadoSolicitud
                        </div>
                        <!-- Fila 3: Botón -->
                        <div style="margin-top: 10px;">
                            <a href="@Url.Action("Detalle", "MisSolicitudes", new { id = s.Id })" class="btn-detalle">
                                <i class="fas fa-eye"></i>
                                <span>Ver Detalle</span>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="no-solicitudes">No se encontraron solicitudes con los filtros aplicados.</p>
        }
    </div>
</div>

<script>
    function aplicarFiltros() {
        const fechaInicio = document.getElementById('fechaInicio').value;
        const fechaFin = document.getElementById('fechaFin').value;
        const estado = document.getElementById('estado').value;

        if (fechaInicio && fechaFin && fechaInicio > fechaFin) {
            alert('La fecha de inicio no puede ser mayor a la fecha fin.');
            return;
        }

        document.getElementById('loading').style.display = 'block';
        document.getElementById('resultados-container').style.display = 'none';

        let url = '@Url.Action("Index", "MisSolicitudes")' + '?';
        const params = [];

        if (fechaInicio) params.push('fechaInicio=' + encodeURIComponent(fechaInicio));
        if (fechaFin) params.push('fechaFin=' + encodeURIComponent(fechaFin));
        if (estado) params.push('estado=' + encodeURIComponent(estado));

        url += params.join('&');

        window.location.href = url;
    }

    function limpiarFiltros() {
        document.getElementById('fechaInicio').value = '';
        document.getElementById('fechaFin').value = '';
        document.getElementById('estado').value = '';

        // Redirigir sin parámetros
        window.location.href = '@Url.Action("Index", "MisSolicitudes")';
    }


    // Evento para Enter en los campos de fecha
    document.getElementById('fechaInicio').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            aplicarFiltros();
        }
    });

    document.getElementById('fechaFin').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            aplicarFiltros();
        }
    });


    document.getElementById('fechaInicio').addEventListener('change', function() {
        const fechaInicio = this.value;
        const fechaFin = document.getElementById('fechaFin');

        if (fechaInicio && !fechaFin.value) {
            const fecha = new Date(fechaInicio);
            fecha.setDate(fecha.getDate() + 30);
            fechaFin.value = fecha.toISOString().split('T')[0];
        }
    });
</script>