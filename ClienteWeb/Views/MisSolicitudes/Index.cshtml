@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "Mis Solicitudes";
    var mensaje = TempData["Mensaje"] as string;   // ⚑ viene del redirect
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Mis Solicitudes</h1>

    <!-- Lista de Solicitudes -->
    <div class="space-y-4">
        <!-- ==== Ejemplo de tarjeta (repite o haz un foreach) ==== -->
        <div class="flex justify-between items-center bg-white p-4 rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
            <div class="flex items-center space-x-7">
                <i class="fas fa-file-alt text-black text-5xl"></i>
                <div>
                    <h5 class="text-lg font-semibold">Solicitud 1</h5>
                    <div class="grid grid-cols-2 gap-4">
                        <p class="text-sm text-gray-500">Descripción de la solicitud…</p>
                        <p class="text-xs text-gray-400">Última actualización: 10/06/2024</p>
                    </div>
                </div>
            </div>

            <button class="openModalBtn text-white bg-blue-500 hover:bg-blue-600 py-2 px-4 rounded-md" data-id="1">
                <i class="fas fa-eye"></i> Ver Detalle
            </button>
        </div>

        <!-- …más solicitudes -->
    </div>
</div>

<!-- ===== Modal de detalles ===== -->
<div id="modal" class="fixed inset-0 flex items-center justify-center bg-gray-500 bg-opacity-50 hidden">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-xl font-semibold mb-4">Detalles de Solicitud</h2>

        <div class="grid grid-cols-1 gap-4">
            <p><strong>ID:</strong> <span id="modal-id">1234</span></p>
            <p><strong>Tipo:</strong> <span id="modal-tipo">Salud</span></p>
            <p><strong>Descripción:</strong> <span id="modal-descripcion">—</span></p>
            <p><strong>Estado:</strong> En Proceso</p>
        </div>

        <div class="mt-6 flex justify-end space-x-4">
            <button class="closeModalBtn bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600">Cerrar</button>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Tailwind (si no está en tu _Layout) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- FontAwesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // === Popup de éxito ===
        @if (!string.IsNullOrEmpty(mensaje))
        {
            <text>
                document.addEventListener('DOMContentLoaded', function () {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Registro exitoso!',
                        text: '@mensaje',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#3085d6',
                        backdrop: true
                    });
                });
            </text>
        }

        // === Modal simple ===
        document.querySelectorAll(".openModalBtn").forEach(btn => {
            btn.addEventListener("click", () => {
                const id = btn.dataset.id;
                document.getElementById("modal-id").textContent = id;
                document.getElementById("modal-tipo").textContent = id === "1" ? "Salud" : "Otro";
                document.getElementById("modal-descripcion").textContent = id === "1"
                    ? "Cambio de cortinas en la sala de espera."
                    : "Solicitud de otro tipo.";

                document.getElementById("modal").classList.remove("hidden");
            });
        });

        document.querySelectorAll(".closeModalBtn").forEach(btn => {
            btn.addEventListener("click", () => {
                document.getElementById("modal").classList.add("hidden");
            });
        });

        // Cerrar si se hace clic en el fondo gris
        document.getElementById("modal").addEventListener("click", (e) => {
            if (e.target.id === "modal") {
                e.target.classList.add("hidden");
            }
        });
    </script>
}
